{
  "manifest_version": 3,
  "name": "Snapback",
  "version": "2.0.0",
  "description": "A mindful reminder to help you refocus when you visit distracting websites",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
